<!Doctype html>
<html class="no-js" lang="fr">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Reserva</title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/normalize.css">
	<link rel="stylesheet" href="~/css/fontawesome/fontawesome-all.css">
	<link rel="stylesheet" href="~/css/linearicons.css">
	<link rel="stylesheet" href="~/css/themify-icons.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/fullcalendar.min.css">
	<link rel="stylesheet" href="~/css/prettyPhoto.css">
	<link rel="stylesheet" href="~/css/tipso.css">
	<link rel="stylesheet" href="~/css/lightpick.css">
	<link rel="stylesheet" href="~/css/main-min.css">
	<link rel="stylesheet" href="~/css/transitions.css">
	<link rel="stylesheet" href="~/css/responsive.css">
	<link rel="stylesheet" href="~/css/googleSignIn.css" />
	<script src="~/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>
	@RenderSection("CustomCSS", required: false)

</head>
<body class="at-home @(ViewData["HideHeaderFooter"] != null && (bool)ViewData["HideHeaderFooter"] ? "no-header-footer" : "")">
	<div id="at-wrapper" class="at-wrapper at-haslayout">

		@if (ViewData["HideHeaderFooter"] == null || !(bool)ViewData["HideHeaderFooter"])
		{
			<!-- Header Start -->
			<header id="at-header" class="at-header at-headervtwo at-haslayout">
				<div class="at-navigationarea" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(8px);">
					<div class="container-fluid">
						<div class="row">
							<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<strong class="at-logo" style="color: white; font-size: 25px;">RESERVA</strong>
								<div class="at-rightarea">
									<nav id="at-nav" class="at-nav navbar-expand-lg">
										<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
											<i class="lnr lnr-menu"></i>
										</button>
										<div class="collapse navbar-collapse at-navigation" id="navbarNav">
											<ul class="navbar-nav">
												<li class="nav-item @(ViewData["ActiveItem"] == "Home" ? "at-navactive" : "")">
													<a asp-controller="Home" asp-action="Index">Accueil</a>
												</li>
												<li class="nav-item @(ViewData["ActiveItem"] == "Logements" ? "at-navactive" : "")">
													<a asp-controller="Search" asp-action="Index">Logements</a>
												</li>
												<li class="nav-item @(ViewData["ActiveItem"] == "About" ? "at-navactive" : "")">
													<a href="about.html">À propos</a>
												</li>
											</ul>
										</div>
									</nav>
									<div class="at-loginarea float-right d-flex align-items-center">
										@if (User.Identity.IsAuthenticated)
										{
											<a asp-controller="Bookings" asp-action="Index" class="at-loginoption">Mes réservations</a>
											@if (User.IsInRole("Propriétaire"))
											{
												<a asp-controller="Properties" asp-action="Index" class="at-loginoption">Mes propriétés</a>
												<a asp-controller="Chat" asp-action="Conversations" class="at-loginoption">Mes Conversations</a>
											}
											<a asp-controller="Account" asp-action="Profil" class="at-loginoption">Mon Profil</a>
											<form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
												<button type="submit" class="btn btn-link at-registeroption text-white">
													Se déconnecter
												</button>
											</form>
										}
										else
										{
											<a asp-controller="Account" asp-action="LoginRegister" class="at-loginoption">Se connecter / S'inscrire</a>
										}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</header>

		}

		@RenderBody()

		@if (ViewData["HideHeaderFooter"] == null || !(bool)ViewData["HideHeaderFooter"])
		{
			<!-- Footer Start -->
			<footer id="at-footer" class="at-footer at-haslayout">
				<div class="at-footerbottom at-haslayout">
					<div class="container">
						<div class="row">
							<div class="col-12 col-md-12">
								<div class="at-copyrights-holder">
									<div class="at-flogoarea">
										<strong class="at-flogo" style="color: white; font-size: 20px;">RESERVA</strong>
										<p class="at-copyrights">Copyrights © 2024 by Reserva All Rights Reserved.</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</footer>
		}
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/js/vendor/jquery-library.js"></script>
	<script src="~/js/vendor/bootstrap.min.js"></script>
	<script src="~/js/owl.carousel.min.js"></script>
	<script src="~/js/moment.min.js"></script>
	<script src="~/js/fullcalendar.min.js"></script>
	<script src="~/js/prettyPhoto.js"></script>
	<script src="~/js/tipso.js"></script>
	<script src="~/js/readmore.js"></script>
	<script src="~/js/lightpick.js"></script>
	<script src="~/js/main-min.js"></script>
	<script src="~/js/main.js"></script>

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
