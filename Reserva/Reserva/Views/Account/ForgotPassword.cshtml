@{
    ViewData["Title"] = "Mot de passe oublié";
    ViewData["HideHeaderFooter"] = true;
}

<div class="cont">
    <div class="form sign-in" style="max-width: 400px; margin: 0 auto; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h2>Mot de passe oublié</h2>
        <p>Entrez votre adresse e-mail pour recevoir un lien de réinitialisation du mot de passe.</p>

        @if (TempData["SuccessMessage"] != null)
        {
            <p class="text-success" style="margin-top: 20px;">@TempData["SuccessMessage"]</p>
        }
        else
        {
            <form asp-action="ForgotPassword" method="post" class="at-formtheme">
                @Html.AntiForgeryToken()
                <label>
                    <span>Adresse e-mail</span>
                    <input type="email" name="email" id="email" class="form-control" required style="max-width: 100%; height: 40px;" />
                </label>
                <button type="submit" class="submit" style="width: 100%; height: 40px;">Envoyer</button>
            </form>
        }
    </div>
</div>
