@model Reserva.ViewModels.ResetPasswordViewModel
@{
    ViewData["HideHeaderFooter"] = true;
}

<div class="cont">
    <div class="form sign-in">
        <h2>Réinitialisation du mot de passe</h2>
        @if (TempData["Message"] != null)
        {
            <p class="text-success" style="margin-bottom: 20px;">@TempData["Message"]</p>
            <script>
                setTimeout(function () {
                    window.location.href = "/";
                }, 3000);
            </script>
        }
        else
        {
            <form asp-action="ResetPassword" method="post" class="at-formtheme">
                @Html.AntiForgeryToken()
                <!-- Champ Token (caché) -->
                <input type="hidden" asp-for="Token" />
                <!-- Email (readonly) -->
                <label>
                    <span>Adresse Courriel</span>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </label>
                <!-- Nouveau mot de passe -->
                <label>
                    <span>Nouveau mot de passe</span>
                    <input asp-for="NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </label>
                <!-- Confirmer le mot de passe -->
                <label>
                    <span>Confirmer le mot de passe</span>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </label>
                <!-- Bouton Réinitialiser -->
                <button type="submit" class="submit">Réinitialiser</button>
            </form>
        }
    </div>
</div>
