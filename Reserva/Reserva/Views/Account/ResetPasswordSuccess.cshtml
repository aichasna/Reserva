@{
    ViewData["Title"] = "Réinitialisation réussie";
    ViewData["HideHeaderFooter"] = true;
}

<div class="cont">
    <div class="form sign-in" style="max-width: 400px; margin: 0 auto; padding: 20px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <h2>Mot de passe réinitialisé</h2>
        <p class="text-success" style="margin-top: 20px;">@TempData["Message"]</p>

        <script>
            setTimeout(function () {
                window.location.href = "/";
            }, 3000);
        </script>
    </div>
</div>
